<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TF_HospitalDeApoyoDeCoraCora</title>
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body>

    <header class="header">
        <div class="container">
            <div class="logo-container">
                <img src="~/assets/logo.png" alt="Logo Hospital de Apoyo Coracora" class="logo">
                <h1 class="hospital-name">HOSPITAL DE APOYO CORACORA</h1>
            </div>
            <nav class="nav-menu">
                <ul>
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
                    <li><a href="#">Citas</a></li>
                    <li><a href="#">Trámites en Línea</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="LoginPaciente">Iniciar Sesión</a></li>
                    <li><a asp-action="RegistrarPaciente">Registrarse</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2025 Hospital de Apoyo de Coracora. Todos los derechos reservados.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

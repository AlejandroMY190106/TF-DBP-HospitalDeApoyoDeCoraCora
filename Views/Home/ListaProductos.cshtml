@{
    ViewData["Title"] = "Inventario de Productos";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Hospital de Apoyo de Coracora</title>
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body>
    <main class="main-content">
        <div class="list-container">
            <h2>Inventario de Productos</h2>
            <table class="data-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Cantidad</th>
                        <th>Fecha Vencimiento</th>
                        <th>Gestión de Inventario</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Ejemplo de fila -->
                    <tr>
                        <td>1</td>
                        <td>Paracetamol 500mg</td>
                        <td>150</td>
                        <td>2025-12-31</td>
                        <td>
                            <div class="inventory-controls">
                                <div class="quantity-input">
                                    <button type="button" class="btn-quantity btn-decrease">-</button>
                                    <input type="number" value="1" min="1" max="150" class="quantity-field">
                                    <button type="button" class="btn-quantity btn-increase">+</button>
                                </div>
                                <div class="inventory-actions">
                                    <button class="btn-success">Agregar</button>
                                    <button class="btn-warning">Reducir</button>
                                </div>
                            </div>
                        </td>
                        <td>
                            <button class="btn-secondary">Actualizar</button>
                            <button class="btn-secondary">Eliminar</button>
                        </td>
                    </tr>
                    <!-- Las demás filas se generarían dinámicamente -->
                </tbody>
            </table>
        </div>
    </main>
</body>
</html>
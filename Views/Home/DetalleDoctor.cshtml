@{
    ViewData["Title"] = "Detalle del Doctor";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Hospital de Apoyo de Coracora</title>
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body>
    <main class="main-content">
        <div class="detail-container">
            <h2>Detalle del Doctor</h2>
            <div class="detail-card doctor-detail">
                <div class="doctor-photo">
                    <img src="~/assets/doctor-ejemplo.png" alt="Foto del Doctor">
                </div>
                
                <div class="doctor-info">
                    <h3>Dr. Cesar Raul Valdivia Huayllas</h3>
                    
                    <div class="info-section">
                        <h4>Información Personal</h4>
                        <div class="info-grid">
                            <div class="info-item">
                                <strong>DNI:</strong> 12345678
                            </div>
                            <div class="info-item">
                                <strong>Primer Nombre:</strong> Cesar
                            </div>
                            <div class="info-item">
                                <strong>Otros Nombres:</strong> Raul
                            </div>
                            <div class="info-item">
                                <strong>Apellido Paterno:</strong> Valdivia
                            </div>
                            <div class="info-item">
                                <strong>Apellido Materno:</strong> Huayllas
                            </div>
                        </div>
                    </div>

                    <div class="info-section">
                        <h4>Información Profesional</h4>
                        <div class="info-grid">
                            <div class="info-item">
                                <strong>Número de Colegiatura:</strong> 12345
                            </div>
                            <div class="info-item">
                                <strong>Tipo de Responsable:</strong> Médico Especialista
                            </div>
                            <div class="info-item">
                                <strong>Especialidad:</strong> Pediatría
                            </div>
                        </div>
                    </div>

                    <div class="info-section">
                        <h4>Información de Contacto</h4>
                        <div class="info-grid">
                            <div class="info-item">
                                <strong>Correo Electrónico:</strong> cesar.valdivia@correo.com
                            </div>
                        </div>
                    </div>

                    <div class="info-section">
                        <h4>Horario de Atención</h4>
                        <div class="info-grid">
                            <div class="info-item">
                                <strong>Horario:</strong> Lunes a Viernes, 9:00 AM - 5:00 PM
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="detail-section">
                <h4>Citas Programadas</h4>
                <!-- Aquí iría una tabla con las citas del doctor -->
            </div>
        </div>
    </main>
</body>
</html>
@{
    ViewData["Title"] = "Detalle del Paciente";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Hospital de Apoyo de Coracora</title>
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body>
    <main class="main-content">
        <div class="detail-container">
            <h2>Detalle del Paciente</h2>
            <div class="detail-card patient-detail">
                <div class="patient-info">
                    <h3>Juan Carlos Pérez García</h3>
                    
                    <div class="info-section">
                        <h4>Información Personal</h4>
                        <div class="info-grid">
                            <div class="info-item">
                                <strong>Tipo de Documento:</strong> DNI
                            </div>
                            <div class="info-item">
                                <strong>Número de Documento:</strong> 12345678
                            </div>
                            <div class="info-item">
                                <strong>Fecha de Nacimiento:</strong> 15 de Mayo de 1990
                            </div>
                            <div class="info-item">
                                <strong>Nombres:</strong> Juan Carlos
                            </div>
                            <div class="info-item">
                                <strong>Apellido Paterno:</strong> Pérez
                            </div>
                            <div class="info-item">
                                <strong>Apellido Materno:</strong> García
                            </div>
                        </div>
                    </div>

                    <div class="info-section">
                        <h4>Datos Personales</h4>
                        <div class="info-grid">
                            <div class="info-item">
                                <strong>Sexo:</strong> Masculino
                            </div>
                            <div class="info-item">
                                <strong>Estado Civil:</strong> Soltero
                            </div>
                        </div>
                    </div>

                    <div class="info-section">
                        <h4>Información de Contacto</h4>
                        <div class="info-grid">
                            <div class="info-item">
                                <strong>Celular:</strong> 987654321
                            </div>
                            <div class="info-item">
                                <strong>Teléfono Fijo:</strong> 044-123456
                            </div>
                            <div class="info-item">
                                <strong>Anexo:</strong> 101
                            </div>
                            <div class="info-item">
                                <strong>Correo Electrónico:</strong> juan.perez@correo.com
                            </div>
                        </div>
                    </div>

                    <div class="info-section">
                        <h4>Ubicación</h4>
                        <div class="info-grid">
                            <div class="info-item">
                                <strong>Departamento:</strong> Ayacucho
                            </div>
                            <div class="info-item">
                                <strong>Provincia:</strong> Parinacochas
                            </div>
                            <div class="info-item">
                                <strong>Distrito:</strong> Coracora
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="detail-section">
                <h4>Historial de Citas</h4>
                <!-- Aquí iría una tabla o lista con las citas pasadas y futuras -->
            </div>
        </div>
    </main>
</body>
</html>
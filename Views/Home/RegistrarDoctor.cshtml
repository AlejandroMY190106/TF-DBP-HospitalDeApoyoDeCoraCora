@{
    ViewData["Title"] = "Registrar Doctor";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Hospital de Apoyo de Coracora</title>
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body>
    <main class="main-content">
        <div class="form-container">
            <h2>Registrar Nuevo Doctor</h2>
            <form id="registrarDoctorForm">
                <div class="form-row">
                    <div class="form-group">
                        <label for="dni">DNI</label>
                        <input type="text" id="dni" placeholder="12345678" maxlength="8" required>
                    </div>
                    <div class="form-group">
                        <label for="numColegiatura">Número de Colegiatura</label>
                        <input type="text" id="numColegiatura" placeholder="12345" maxlength="5" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="primerNombre">Primer Nombre</label>
                        <input type="text" id="primerNombre" placeholder="Ingrese el primer nombre" maxlength="20" required>
                    </div>
                    <div class="form-group">
                        <label for="otrosNombres">Otros Nombres</label>
                        <input type="text" id="otrosNombres" placeholder="Segundos nombres (opcional)" maxlength="20">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="apellidoPaterno">Apellido Paterno</label>
                        <input type="text" id="apellidoPaterno" placeholder="Apellido paterno" maxlength="20" required>
                    </div>
                    <div class="form-group">
                        <label for="apellidoMaterno">Apellido Materno</label>
                        <input type="text" id="apellidoMaterno" placeholder="Apellido materno" maxlength="20" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="tipoResponsable">Tipo de Responsable</label>
                        <select id="tipoResponsable" required>
                            <option value="">Seleccione tipo</option>
                            <option value="Médico Cirujano">Médico Cirujano</option>
                            <option value="Médico Especialista">Médico Especialista</option>
                            <option value="Médico Residente">Médico Residente</option>
                            <option value="Enfermero(a)">Enfermero(a)</option>
                            <option value="Técnico en Enfermería">Técnico en Enfermería</option>
                            <option value="Otro">Otro</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="especialidad">Especialidad</label>
                        <input type="text" id="especialidad" placeholder="Ingrese la especialidad" maxlength="30" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="correo">Correo electrónico</label>
                        <input type="email" id="correo" placeholder="doctor@correo.com" required>
                    </div>
                    <div class="form-group">
                        <label for="foto">Foto del Doctor (opcional)</label>
                        <input type="file" id="foto" accept="image/*">
                    </div>
                </div>

                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="password" id="password" placeholder="Cree una contraseña" required>
                </div>

                <button type="submit" class="btn-primary">Registrar Doctor</button>
            </form>
        </div>
    </main>
</body>
</html>